import ContactForm from '../components/ContactForm.astro';

const benefits = [
	{
		title: "5x Faster Deployment",
		description: "Revolutionary fiber optic infrastructure that can be laid 5 times faster than traditional systems.",
		icon: "âš¡"
	},
	{
		title: "10x Cost Reduction",
		description: "Significantly more cost-effective than traditional VHF systems, making cave communication accessible.",
