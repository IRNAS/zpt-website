---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';

const sources = {
	title: "Transform Your Electronics Testing Process",
	description: "A complete ecosystem of hardware, firmware, and cloud solutions for seamless electronics production testing.",
	

}
const benefits = [
	{
		title: "Test-Driven Development",
		description: "The ZPT ecosystem is designed to unify the PCBA testing between developers and assembly lines.",
		icon: "âœ…",
	},
	{
		title: "Affordable and Accessible",
		description: "ZPT is making significant improvements in usability and pricing models to enable automated testing from day one.",
		icon: "ðŸ’°",

	},
	{
		title: "Adaptable to new designs",
		description: "Due to modular design, you can easily customize your ZPT system to new designs, unlocking rapid innovation.",
		icon: "ðŸš€",

	},
];
---

<Layout
	title="ZPT - Revolutionary Electronics Production Testing Ecosystem"
	description="ZPT is an electronics production testing ecosystem of products that helps developers, product manufactures and PCB assembly houses to deliver tested and issue free products to the market with minimal cost and development overhead."
>
	<header class="header">
		<div class="logo">
			<!--img src="C:\Users\Luka\Downloads\locave\src\pages\Logo.png" alt="LoCave" width="120" height="40"-->
		</div>
	</header>
	<main>
		<!-- Hero Section -->
		<section class="hero">
			<video autoplay loop muted playsinline class="hero-video">
				<source src="/_title-video.mp4" type="video/mp4">
			</video>
			<div class="video-overlay"></div>
			<div class="hero-grid">

				<div class="hero-content">
					<h1> {sources.title} </h1>
					<p class="hero-subtitle">
						{sources.description}
					</p>
					<div class="cta-group">
						<a href="#contact" class="cta-button">Request Demo</a>
						<a href="#features" class="cta-button secondary">Learn More</a>
					</div>
				</div>

			</div>
		</section>


		<!--Features Section -->
		<section id="features" class="features">
			<div class="feature-content">
				<!--h1>How it works?</h1-->
				<h1 class="features-title">
					Cloud controlled testing automation from day one.
				</h1>
				<h2 class="features-subtitle">
					Easily customizable hardware testing solutions with scalable cloud capabilities empowers businesses to deliver high-quality products in an efficient and cost-effective way.				</h2>
					<div class="features-image-grid">
					<div class="feature-image">
						<img src='/_production-setup.png') alt="ZPT automated electronics testing system in production." />
						<h3>ZPT System </h3>
						<p></p>
					</div>
					<div class="feature-image">
						<img src='/_ZPT-cloud.png') alt="ZPT cloud." />
						<h3>ZPT Cloud </h3>
						<p></p>
					</div>
				</div>
			</div>
		</section>

		<!-- Benefits Section --->
		<section id="benefits" class="benefits">
			<h2>Why ZPT?</h2>
			<div class="benefits-grid">
				{benefits.map(benefit => (
					<div class="benefit-card">
						<div class="benefit-icon">{benefit.icon}</div>
						<h3>{benefit.title}</h3>
						<p>{benefit.description}</p>
					</div>
				))}
			</div>
			<div class="features-cta">
				<a href="#contact" class="cta-button">Learn More</a>
			</div>
		</section>

		<!-- Contact Section -->
		<section id="contact" class="contact">
			<h2>Transform Your Electronics Testing Process</h2>
			<p>Streamlined traceability everywhere.</p>
			<ContactForm />
		</section>
	</main>
</Layout>

<style>
	main {
		color: #1f2937;
	}
	
	.header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		padding: 1rem 2rem;
		background: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.6));
		background-size: cover;
		background-position: center;
		backdrop-filter: blur(5px);
		z-index: 100;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
	}

	.logo {
		height: 160px;
		background: url('/_Logo.png');
		background-size: contain;
		background-repeat: no-repeat;
	}

	.logo img {
		filter: brightness(0) invert(1);
	}

	.hero {
		position: relative;
		height: 100vh;
		width: 100%;
		overflow: hidden;
		display: flex;
		align-items: center;
		justify-content: center;
		/*color: white;*/
	}

	.video-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: rgba(0, 0, 0, 0.5); /* Adjust opacity here */
		z-index: 0;
	}
	.hero-video {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		z-index: -1;
	}


	.hero-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		max-width: 1200px;
		margin: 0 auto;
		align-items: center;
	}

	.hero-content {
		position: relative;
		max-width: 600px;
		color: white;
		z-index: 1;
	}

	h1 {
		font-size: 3.5rem;
		font-weight: 800;
		margin-bottom: 1rem;
		line-height: 1.1;
	}

	.hero-subtitle {
		font-size: 1.5rem;
		margin-bottom: 2rem;
		opacity: 0.9;
		color: white;
		z-index: 1;
	}

	.cta-group {
		display: flex;
		gap: 1rem;
	}

	.original-button {
	/* Optional: Style adjustments specific to the original button */
		align-self: center; /* Adjust its position if needed */
	}

	.cta-button {
		background: rgb(var(--primary));
		color: white;
		padding: 1rem 2.5rem;
		border-radius: 100px;
		text-decoration: none;
		font-weight: 600;
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		box-shadow: 0 4px 15px rgba(var(--primary), 0.3);
	}

	.cta-button::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			120deg,
			transparent,
			rgba(255, 255, 255, 0.2),
			transparent
		);
		transform: translateX(-100%);
		transition: 0.6s;
	}

	.cta-button:hover {
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(var(--primary), 0.4);
	}

	.cta-button:hover::before {
		transform: translateX(100%);
	}

	.cta-button.secondary {
		background: transparent;
		border: 2px solid rgba(255, 255, 255, 0.8);
		box-shadow: 0 4px 15px rgba(255, 255, 255, 0.1);
	}

	.cta-button.secondary:hover {
		background: rgba(255, 255, 255, 0.1);
		box-shadow: 0 6px 20px rgba(255, 255, 255, 0.2);
	}

	.hero-video {
		display: flex;
		align-items: center;
		justify-content: center;
		height: 100%;
		aspect-ratio: 16/9;
		border-radius: 1rem;
		overflow: hidden;
		box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
	}

	.video-frame {
		width: 100%;
		height: 100%;
		border-radius: 1rem;
		display: block;

	}

	.benefits {
		padding: 4rem 2rem;
		background: #f3f4f6;
	}

	.benefits h2 {
		text-align: center;
		font-size: 2.5rem;
		margin-bottom: 3rem;
	}

	.benefits-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		max-width: 1200px;
		margin: 0 auto;
		margin-bottom: 1cm;
	}

	.benefit-card {
		background: white;
		padding: 2rem;
		border-radius: 0.5rem;
		box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
	}

	.benefit-icon {
		font-size: 2rem;
		margin-bottom: 1rem;
		text-align: center;
	}

	.features {
		padding: 4rem 2rem;
		background: white;
		text-align: center;
	}

	.features-title {
		font-size: 2.5rem;
		margin-bottom: 3rem;
		font-weight: bold;
	}

	.features-subtitle {
		font-size: 1.5rem;
		margin-bottom: 3rem;
		font-weight: normal;
	}

	.features-image-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 2rem;
		max-width: 1200px;
		margin: 0 auto;
	}
	.feature-image {
		max-width: 400px;
		margin: 0 auto;
		border-radius: 1rem;
		overflow: hidden;
		box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
		aspect-ratio: 1/1;
	}

	.feature-image img {
		width: 100%;
		height: 100%;
		object-fit: contain;
		border-radius: 1rem;
	}

	.features-cta {
		display: flex;
		justify-content: center;
	}

	
	
	.page-subtitle {
		font-size: 1.5rem;
		margin-bottom: 2rem;
		opacity: 0.9;
		color: rgb(0, 0, 0);
		z-index: 1;
	}

	.contact {
		padding: 4rem 2rem;
		background: #f3f4f6;
		text-align: center;
	}

	.contact h2 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.contact p {
		margin-bottom: 3rem;
	}

	@media (max-width: 768px) {
		.hero-grid, .features-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		h1 {
			font-size: 2.5rem;
		}
		
		.hero-subtitle {
			font-size: 1.25rem;
		}
		
		.cta-group {
			flex-direction: column;
		}
		
		.benefits-grid {
			grid-template-columns: 1fr;
		}

		.feature-content {
			max-width: 100%;
		}
	}
</style>